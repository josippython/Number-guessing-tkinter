from tkinter import *
import random
import time

screen = Tk()
screen.geometry('600x500')
screen.title('Guess the number')

try_count = 0

def Quit_button_menu_function():
    screen.destroy()
def Play_button_menu_function():
    global try_count
    def submit_first_function():
        global try_count
        def Guess_button_function():
            global try_count
            def Again_button_succes_function():
                global try_count
                try_count = 0

                blank_top_3_first.pack_forget()
                blank_top_3_second.pack_forget()
                blank_top_3_third.pack_forget()
                blank_top_3_fourth.pack_forget()
                Congrats_message.pack_forget()
                random_number_reveal.pack_forget()
                Again_button_succes.pack_forget()
                Quit_button_succes.pack_forget()
                Tries_label_succes.pack_forget()
                blank_top_3_fifth.pack_forget()

                blank_top_menu.pack()
                Number_guessing_menu.pack()
                blank_second_menu.pack()
                Play_button_menu.pack()
                blank_third_menu.pack()
                Quit_button_menu.pack()
            try:
                guess = Guess_entry.get()
                if int(guess) > int(random_number):
                    Guess_entry.delete(0, 'end')
                    try_count += 1
                    Try_count_label['text'] = ("Try: " + str(try_count))
                    Guess_the_number_Label_2['text'] = str("You guessed too high")
                if int(guess) < int(random_number):
                    Guess_entry.delete(0, 'end')
                    try_count += 1
                    Try_count_label['text'] = ("Try: " + str(try_count))
                    Guess_the_number_Label_2['text'] = str("You guessed too small")
                if int(guess) == int(random_number):
                    try_count += 1
                    Try_count_label['text'] = ("Try: " + str(try_count))
                    Guess_the_number_Label_2['text'] = str("You guessed correctly")

                    blank_top_2_first.pack_forget()
                    Guess_the_number_Label_2.pack_forget()
                    blank_2_second.pack_forget()
                    Guess_label_2.pack_forget()
                    blank_2_third.pack_forget()
                    Guess_entry.pack_forget()
                    blank_2_fourth.pack_forget()
                    Guess_button.pack_forget()
                    blank_2_fifth.pack_forget()
                    Try_count_label.pack_forget()

                    blank_top_3_first = Label(screen, text="")
                    blank_top_3_first.config(font=('Aerial', 3))
                    blank_top_3_first.pack()
                    Congrats_message = Label(screen, text="You guessed correctly")
                    Congrats_message.config(font=('Aerial', 36))
                    Congrats_message.pack()
                    blank_top_3_second = Label(screen, text="")
                    blank_top_3_second.config(font=('Aerial', 1))
                    blank_top_3_second.pack()
                    random_number_reveal = Label(screen, text="The number was " + str(random_number))
                    random_number_reveal.config(font=('Aerial', 36))
                    random_number_reveal.pack()
                    blank_top_3_third = Label(screen, text="")
                    blank_top_3_third.config(font=('Aerial', 3))
                    blank_top_3_third.pack()
                    Tries_label_succes = Label(screen, text="Tries: " + str(try_count))
                    Tries_label_succes.config(font=('Aerial', 37))
                    Tries_label_succes.pack()
                    blank_top_3_fourth = Label(screen, text="")
                    blank_top_3_fourth.config(font=('Aerial', 40))
                    blank_top_3_fourth.pack()
                    Again_button_succes = Button(screen, text="Menu", command=lambda: Again_button_succes_function())
                    Again_button_succes.config(font=('Aerial', 33))
                    Again_button_succes.pack()
                    blank_top_3_fifth = Label(screen, text="")
                    blank_top_3_fifth.config(font=('Aerial', 13))
                    blank_top_3_fifth.pack()
                    Quit_button_succes = Button(screen, text="Quit", command=lambda: Quit_button_menu_function())
                    Quit_button_succes.config(font=('Aerial', 33))
                    Quit_button_succes.pack()
            except:
                blank_top_2_first.pack()
                Guess_the_number_Label_2.pack()
                blank_2_second.pack()
                Guess_label_2.pack()
                blank_2_third.pack()
                Guess_entry.pack()
                blank_2_fourth.pack()
                Guess_button.pack()
                blank_2_fifth.pack()
                Try_count_label.pack()

        try:
            blank_top_1_first.pack_forget()
            Intro_1_first.pack_forget()
            Intro_2_first.pack_forget()
            Intro_3_first.pack_forget()
            blank_second_1_first.pack_forget()
            blank_third_1_first.pack_forget()
            First_number_label.pack_forget()
            First_number_Entry.pack_forget()
            Second_number_label.pack_forget()
            Second_number_Entry.pack_forget()
            Sumbit_first.pack_forget()

            First_number = First_number_Entry.get()
            Second_number = Second_number_Entry.get()
            random_number = random.randint(int(First_number), int(Second_number))
            blank_top_2_first = Label(screen, text=" ")
            blank_top_2_first.config(font=('Aerial', 3))
            blank_top_2_first.pack()
            Guess_the_number_Label_2 = Label(screen, text="Guess the number")
            Guess_the_number_Label_2.config(font=('Aerial', 40))
            Guess_the_number_Label_2.pack()
            blank_2_second = Label(screen, text=" ")
            blank_2_second.config(font=('Aerial', 50))
            blank_2_second.pack()
            Guess_label_2 = Label(screen, text="Guess")
            Guess_label_2.config(font=('Aerial', 30))
            Guess_label_2.pack()
            blank_2_third = Label(screen, text=" ")
            blank_2_third.config(font=('Aerial', 3))
            blank_2_third.pack()
            Guess_entry = Entry(screen, width=10)
            Guess_entry.config(font=('Aerial', 30))
            Guess_entry.pack()
            blank_2_fourth = Label(screen, text=" ")
            blank_2_fourth.config(font=('Aerial', 30))
            blank_2_fourth.pack()
            Guess_button = Button(screen, text="Guess", command=lambda: Guess_button_function())
            Guess_button.config(font=('Aerial', 33))
            Guess_button.pack()
            blank_2_fifth = Label(screen, text=" ")
            blank_2_fifth.config(font=('Aerial', 10))
            blank_2_fifth.pack()
            Try_count_label = Label(screen, text="Try: " + str(try_count))
            Try_count_label.config(font=('Aerial', 30))
            Try_count_label.pack()

        except:
            blank_top_1_first.pack()
            Intro_1_first.pack()
            Intro_2_first.pack()
            Intro_3_first.pack()
            blank_second_1_first.pack()
            First_number_label.pack()
            First_number_Entry.pack()
            Second_number_label.pack()
            Second_number_Entry.pack()
            blank_third_1_first.pack()
            Sumbit_first.pack()

    blank_top_menu.pack_forget()
    Number_guessing_menu.pack_forget()
    blank_second_menu.pack_forget()
    Play_button_menu.pack_forget()
    blank_third_menu.pack_forget()
    Quit_button_menu.pack_forget()

    blank_top_1_first = Label(screen, text=" ")
    blank_top_1_first.config(font=('Aerial', 1))
    blank_top_1_first.pack()
    Intro_1_first = Label(screen, text="Enter two numbers,")
    Intro_1_first.config(font=('Aerial', 33))
    Intro_1_first.pack()
    Intro_2_first = Label(screen, text="Between that two numbers is")
    Intro_2_first.config(font=('Aerial', 33))
    Intro_2_first.pack()
    Intro_3_first = Label(screen, text="secret number")
    Intro_3_first.config(font=('Aerial', 33))
    Intro_3_first.pack()
    blank_second_1_first = Label(screen, text=" ")
    blank_second_1_first.config(font=('Aerial', 4))
    blank_second_1_first.pack()
    First_number_label = Label(screen, text="First number")
    First_number_label.config(font=('Aerial', 30))
    First_number_label.pack()
    First_number_Entry = Entry(screen, width=5)
    First_number_Entry.config(font=('Aerial', 30))
    First_number_Entry.pack()
    Second_number_label = Label(screen, text="First number")
    Second_number_label.config(font=('Aerial', 30))
    Second_number_label.pack()
    Second_number_Entry = Entry(screen, width=5)
    Second_number_Entry.config(font=('Aerial', 30))
    Second_number_Entry.pack()
    blank_third_1_first = Label(screen, text=" ")
    blank_third_1_first.config(font=('Aerial', 3))
    blank_third_1_first.pack()
    Sumbit_first = Button(screen, text="Submit", command=lambda: submit_first_function())
    Sumbit_first.config(font=('Aerial', 30))
    Sumbit_first.pack()
blank_top_menu = Label(screen, text=" ")
blank_top_menu.config(font=('Aerial', 4))
blank_top_menu.pack()
Number_guessing_menu = Label(screen, text="Number guessing")
Number_guessing_menu.config(font=('Aerial', 45))
Number_guessing_menu.pack()
blank_second_menu = Label(screen, text=" ")
blank_second_menu.config(font=('Aerial', 80))
blank_second_menu.pack()
Play_button_menu = Button(screen, text="Play", command=lambda: Play_button_menu_function())
Play_button_menu.config(font=('Aerial', 40))
Play_button_menu.pack()
blank_third_menu = Label(screen, text=" ")
blank_third_menu.config(font=('Aerial', 20))
blank_third_menu.pack()
Quit_button_menu = Button(screen, text="Quit", command=lambda: Quit_button_menu_function())
Quit_button_menu.config(font=('Aerial', 40))
Quit_button_menu.pack()

screen.mainloop()
